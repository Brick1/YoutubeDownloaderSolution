<Window x:Class="YoutubeDownloaderSolution.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDownloaderSolution" xmlns:localUC="clr-namespace:YoutubeDownloaderDesktop.UserControls"
        mc:Ignorable="d"
       WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderThickness="0"
        Title="Loading window" Height="300" Width="600">
    <Grid>
        <Rectangle >
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0 0" EndPoint="1 1">
                    <GradientStop Color="#022534" Offset="0"/>
                    <GradientStop Color="#094f6e" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid >
            <localUC:LogoUC/>
        </Grid>


    </Grid>
</Window>
